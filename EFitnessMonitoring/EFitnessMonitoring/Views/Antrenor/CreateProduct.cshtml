</div>
<br />


<form action="/Antrenor/CreateProduct" method="post">
    <h1 style="text-align: center;">Creare Articol</h1>
    <div class="grid-container">
        <div class="borderarticle">
            @Html.TextBoxFor(m => m.Nume_produs, new { placeholder = "Nume produs", required = "required" })
            <i class="fas fa-ad fa-2x"></i>
        </div>
        <div class="borderarticle">
            @Html.TextBoxFor(m => m.Image, new { placeholder = "Linq imagine", required = "required" })
            <i class="fas fa-image fa-2x"></i>
        </div>
        <div class="borderarticle">
            @Html.TextBoxFor(m => m.Linq, new { placeholder = "Linq produs", required = "required" })
           <i class="fa fa-link fa-2x" aria-hidden="true"></i>
            </div>
        <div class="borderarticle">
            @Html.DropDownListFor(m => m.Id_category, new List<SelectListItem>
      {
           new SelectListItem {Text = "Categorie produs", },
           new SelectListItem {Text = "brățară fitness", Value = "1" },
           new SelectListItem {Text = "proteine", Value = "2" },
           new SelectListItem {Text = "aerobică", Value = "3" }

      })
            </div>
            <br />
            <div class="field-outer">
                <input style="width: 300px; margin: auto;" class="btnArticol" type="submit" value="Postează articol" />
                <br /><br /><br />
            </div>

        </div>
</form>

<script src="~/Themes/ckeditor/ckeditor.js"></script>



