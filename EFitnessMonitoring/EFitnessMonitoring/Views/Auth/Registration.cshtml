@using EFitnessMonitoring.Models.DTO
@model  RegistrationView
    <div class="header2" id="header">
        <div class="header-logo-outs">
            <div class="container-fluid">
                <!--//navigation section -->
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="hedder-up ">
                        <h1><a class="navbar-brand" href="/Home/index" data-aos="fade-right">EMF</a></h1>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent" data-aos="fade-left">
                        <ul class="navbar-nav">

                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a href="/Auth/GetUsers" class="nav-link">AdminMode</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a href="/Antrenor/GetCardProduct" class="nav-link">Produse</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Antrenor/Atrenamente/" class="nav-link">Fitness</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Home/About" class="nav-link">Despre</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Home/Galerie" class="nav-link">Galerie</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Calculator/Calculator" class="nav-link">Calculator</a>
                            </li>
                            
                            <li class="nav-item">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="/Auth/Logout" class="nav-link">Logout</a>
                                }
                                else
                                {
                                    <a href="/Auth/Login" class="nav-link">Login</a>
                                }
                            </li>
                        </ul>
                    </div>
                </nav>
                <!--//navigation section -->
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!--Registration Form-->
    <br />
    <h1 class="mb-lg-5 mb-lg-4 mb-3" style="text-align: center;">Înregistrare</h1>
    <form action="/Auth/Registration" method="post">
        <div class="field-outer">
            <div class="regborder">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "UserName", required = "required" })
                <i class="fas fa-user"></i>
            </div>
            <div class="regborder">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", required = "required" })
                <i class="fas fa-at"></i>
            </div>
            <div class="regborder">
                @Html.DropDownListFor(m => m.Gen, new List<SelectListItem>
           {
               new SelectListItem {Text = "masculin"},
               new SelectListItem {Text = "feminin" }
           })
                <i class="fas fa-transgender"></i>
            </div>
            <div class="regborder">
                @Html.TextBoxFor(m => m.Virsta, new { placeholder = "Virsta", required = "required" })
                <i class="far fa-calendar-alt"></i>
            </div>
            <div class="regborder">
                @Html.PasswordFor(m => m.Parola, new { placeholder = "Parola", required = "required" })
                <i class="fas fa-unlock-alt"></i>
            </div>
            <div class="regborder">
                @Html.PasswordFor(m => m.ConfirmParola, new { placeholder = "ConfirmParola" })
                <i class="fas fa-lock"></i>
            </div>
            <div>
                <input class="btnreg1" type="submit" value="Registrare" />
            </div>
        </div>
    </form>



